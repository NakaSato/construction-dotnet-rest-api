{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=SolarProjectsDb;Username=postgres;Password=postgres;Port=5432",
    "Redis": ""
  },
  "Caching": {
    "DefaultMemoryCacheDurationMinutes": 15,
    "DefaultDistributedCacheDurationMinutes": 60,
    "EnableDistributedCache": false,
    "CacheKeyPrefix": "SolarAPI:",
    "Profiles": {
      "UserDetails": {
        "DurationMinutes": 30,
        "SlidingExpiration": true
      },
      "UserList": {
        "DurationMinutes": 15,
        "SlidingExpiration": false
      },
      "UserRoles": {
        "DurationMinutes": 1440,
        "SlidingExpiration": true
      },
      "UserQuery": {
        "DurationMinutes": 10,
        "SlidingExpiration": false
      },
      "ProjectDetails": {
        "DurationMinutes": 20,
        "SlidingExpiration": true
      },
      "ProjectList": {
        "DurationMinutes": 15,
        "SlidingExpiration": false
      },
      "ProjectQuery": {
        "DurationMinutes": 12,
        "SlidingExpiration": false
      },
      "TaskDetails": {
        "DurationMinutes": 15,
        "SlidingExpiration": true
      },
      "TaskList": {
        "DurationMinutes": 10,
        "SlidingExpiration": false
      },
      "TaskQuery": {
        "DurationMinutes": 8,
        "SlidingExpiration": false
      },
      "ProjectTasks": {
        "DurationMinutes": 12,
        "SlidingExpiration": true
      }
    }
  },
  "Jwt": {
    "Key": "ThisIsASecretKeyForJWTTokenGenerationAndShouldBeChangedInProduction",
    "Issuer": "SolarProjectsAPI",
    "Audience": "SolarProjectsClient",
    "ExpiryInHours": 24
  },
  "AWS": {
    "Region": "us-east-1",
    "S3BucketName": "solar-projects-images",
    "AccessKey": "",
    "SecretKey": ""
  },
  "Upload": {
    "MaxFileSizeInMB": 10,
    "AllowedFileTypes": ["image/jpeg", "image/png", "image/jpg"],
    "TempStoragePath": "temp/"
  },
  "RateLimit": {
    "DefaultRule": "default",
    "EnableIpWhitelist": true,
    "IpWhitelist": ["127.0.0.1", "::1"],
    "ClientIdHeader": "X-Client-Id",
    "Rules": {
      "default": {
        "Limit": 100,
        "Period": "00:01:00",
        "Endpoints": [],
        "HttpMethods": [],
        "ApplyPerEndpoint": false
      },
      "auth": {
        "Limit": 10,
        "Period": "00:01:00",
        "Endpoints": ["/api/v1/auth"],
        "HttpMethods": ["POST"],
        "ApplyPerEndpoint": true
      },
      "upload": {
        "Limit": 20,
        "Period": "00:01:00",
        "Endpoints": ["/api/v1/images"],
        "HttpMethods": ["POST"],
        "ApplyPerEndpoint": true
      },
      "data-intensive": {
        "Limit": 50,
        "Period": "00:01:00",
        "Endpoints": ["/api/v1/projects", "/api/v1/tasks"],
        "HttpMethods": ["GET"],
        "ApplyPerEndpoint": false
      },
      "modification": {
        "Limit": 30,
        "Period": "00:01:00",
        "Endpoints": ["/api/v1/projects", "/api/v1/tasks", "/api/v1/users"],
        "HttpMethods": ["POST", "PUT", "DELETE"],
        "ApplyPerEndpoint": true
      }
    }
  }
}