{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ForceHttpsRedirection": false,
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=SolarProjectsDb;Username=postgres;Password=postgres;Port=5432",
    "TodoContext": "Server=(localdb)\\mssqllocaldb;Database=TodoDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "RateLimit": {
    "DefaultRule": "default",
    "EnableIpWhitelist": false,
    "IpWhitelist": ["127.0.0.1", "::1", "localhost"],
    "Rules": {
      "default": {
        "Limit": 5,
        "Period": "00:01:00"
      },
      "auth": {
        "Limit": 50,
        "Period": "00:01:00",
        "Endpoints": ["/api/v1/auth"],
        "HttpMethods": ["POST"]
      },
      "upload": {
        "Limit": 100,
        "Period": "00:01:00",
        "Endpoints": ["/api/v1/images"],
        "HttpMethods": ["POST"]
      }
    }
  }
}